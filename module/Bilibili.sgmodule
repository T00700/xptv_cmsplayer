#!name=Bilibili
#!desc=去廣告

[Rule]
URL-REGEX,^https?:\/\/api\.bilibili\.com\/pgc\/activity\/deliver\/material\/receive,REJECT
DOMAIN-SUFFIX,cm.bilibili.com,REJECT
# Reject IP 請求
URL-REGEX,^https?:\/\/app\.bilibili\.com\/x\/resource\/ip,REJECT
# Reject DefaultWords
URL-REGEX,^https?:\/\/app\.bilibili\.com\/bilibili\.app\.interface\.v1\.Search\/Default,REJECT
URL-REGEX,^https://app.bilibili.com/x/v2/search/defaultwords,REJECT
URL-REGEX,^https://grpc.biliapi.net/bilibili.app.interface.v1.Search/DefaultWords,REJECT
# 首頁右上活動移除(需重新安裝)
URL-REGEX,^https?:\/\/app\.bilibili\.com\/x\/resource\/top\/activity,REJECT
# 贊助廣告
URL-REGEX,^https?:\/\/api\.bilibili\.com\/pgc\/season\/app\/related\/recommend\?,REJECT
# 小卡片廣告
URL-REGEX,^https://api.bilibili.com/pgc/season/player/cards,REJECT
# material ads
URL-REGEX,^https?:\/\/api\.bilibili\.com\/x\/vip\/ads\/material\/report,REJECT
# 大家都在搜
URL-REGEX,^https?:\/\/api\.vc\.bilibili\.com\/search_svr\/v\d\/Search\/recommend_words,REJECT
# 去除動態中的話題
URL-REGEX,^https?:\/\/api\.vc\.bilibili\.com\/topic_svr\/v1\/topic_svr,REJECT
# 去除開屏廣告
URL-REGEX,^https://app.bilibili.com/x/v2/splash/show,REJECT
URL-REGEX,^https?:\/\/api\.bilibili\.com\/x\/v2\/dm\/ad,REJECT

[Script]
Bilibili-proto = type=http-response,pattern=^https:\/\/app\.bilibili\.com\/bilibili\.app\.(view\.v1\.View\/View|dynamic\.v2\.Dynamic\/DynAll)$,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/app2smile/rules/master/js/bilibili-proto.js,script-update-interval=0
Bilibili-動態廣告 = type=http-response,pattern=;^https://app\.bilibili\.com/bilibili\.app\.dynamic\.v2\.Dynamic/DynAll$,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/yjqiang/surge_scripts/main/scripts/bilibili/bilibili_dynamic.js,script-update-interval=0
Bilibili-追番去廣告 = type=http-response,pattern=^https?:\/\/api\.(bilibili|biliapi)\.(com|net)\/pgc\/page\/bangumi,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Yswag/for-own-use/main/js/Bilibili_plus.js,script-update-interval=0
Bilibili-直播去廣告 = type=http-response,pattern=^https?:\/\/api\.live\.bilibili\.com\/xlive\/app-room\/v1\/index\/getInfoByRoom,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Yswag/for-own-use/main/js/Bilibili_plus.js,script-update-interval=0
Bili-我的頁面處理 = type=http-response,pattern=^https?:\/\/app\.bilibili\.com\/x\/v2\/account\/mine,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Yswag/for-own-use/main/js/Bilibili_plus.js,script-update-interval=0
Bili-動態去廣告 = type=http-response,pattern=^https?:\/\/api\.vc\.bilibili\.com\/dynamic_svr\/v1\/dynamic_svr\/dynamic_(history|new)\?,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Yswag/for-own-use/main/js/Bilibili_plus.js,script-update-interval=0
Bili-推薦去廣告 = type=http-response,pattern=^https?:\/\/app\.bilibili\.com\/x\/v2\/feed\/index,requires-body=1,script-path=https://raw.githubusercontent.com/Yswag/for-own-use/main/js/Bilibili_plus.js,script-update-interval=0,max-size=0
Bili-開屏去廣告 = type=http-response,pattern=^https:\/\/app\.bilibili\.com\/x\/v2\/splash\/list,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Yswag/for-own-use/main/js/Bilibili_plus.js,script-update-interval=0
Bili-播放頁面去廣告 = type=http-response,pattern=^https?:\/\/api\.(bilibili|biliapi)\.(com|net)\/pgc\/page\/cinema\/tab\?,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Yswag/for-own-use/main/js/Bilibili_plus.js,script-update-interval=0
Bili-去除熱搜 = type=http-response,pattern=^https://app.bilibili.com/x/v2/search/square,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Yswag/for-own-use/main/js/Bilibili_plus.js,script-update-interval=0
# 標籤處理
#Bilibili-tabs = type=http-response,pattern=^https?:\/\/app\.bilibili\.com\/x\/resource\/show\/tab,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Yswag/for-own-use/main/js/Bilibili_plus.js,script-update-interval=0
# 去除統一設置的皮膚
Bilibili-skin = type=http-response,pattern=^https?:\/\/app\.bilibili\.com\/x\/resource\/show\/skin\?,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Yswag/for-own-use/main/js/Bilibili_plus.js,script-update-interval=0
# 解鎖一般影片清晰度
Bilibili vip unlock = type=http-response,pattern=^https?:\/\/app\.bilibili\.com\/x\/v2\/account\/myinfo\?,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Yswag/for-own-use/main/js/Bilibili_plus.js,script-update-interval=0
Bilibili 簡中cc轉繁中 = type=http-response,pattern=^https?:\/\/i.\.hdslb\.com\/bfs\/subtitle\/.+\.json$,requires-body=1,max-size=-1,script-path=https://raw.githubusercontent.com/Yswag/for-own-use/main/js/Bilibili_cc.js,script-update-interval=0

[Host]
*.bilibili.com = server:101.101.101.101
upos-hz-mirrorakam.akamaized.net = server:101.101.101.101
upos-sz-mirrorcosov.bilivideo.com = server:101.101.101.101
line3-h5-mobile-api.biligame.com = server:101.101.101.101
*.hdslb.com = server:101.101.101.101

[URL Rewrite]
# 去除搜索中的大家都在搜
^https?:\/\/api\.vc\.bilibili\.com\/search_svr\/v\d\/Search\/recommend_words - reject
^https?:\/\/api\.bilibili\.com\/pgc\/season\/app\/related\/recommend\? - reject
^https?:\/\/api\.vc\.bilibili\.com\/dynamic_svr\/v1\/dynamic_svr\/mix_uplist - reject
# 去除動態中的話題
^https?:\/\/api\.vc\.bilibili\.com\/topic_svr\/v1\/topic_svr - reject
# 去除動態中的最常訪問
^https?:\/\/api\.vc\.bilibili\.com\/dynamic_svr\/v1\/dynamic_svr\/mix_uplist - reject

[MITM]
hostname = %APPEND% *.hdslb.com,app.bilibili.com,api.live.bilibili.com,api.vc.bilibili.com,api.bilibili.com, grpc.biliapi.net,api.biliapi.net,-broadcast.chat.bilibili.com,-*cdn*.biliapi.net,-*tracker*.biliapi.net