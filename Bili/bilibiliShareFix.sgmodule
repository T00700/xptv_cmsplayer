ipv6-vif = auto

[Script]
bilibiliShareFix = type=http-response,pattern=https://api.(bilibili|biliapi).(com|net)/x/share/click,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Yswag/for-own-use/main/Bili/b23.js,script-update-interval=0

